<!DOCTYPE html>
<html lang="ua">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>IR {% block title %}{% endblock %}</title>

    {% set uriRes = 'bundles/irsite/' %}

    <link rel="icon" type="image/ico" href="favicon.ico">
    <link href="{{ asset(uriRes ~ 'css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset(uriRes ~ 'css/materialPreloader.min.css') }}" rel="stylesheet">
    <link href="{{ asset(uriRes ~ 'css/main.css') }}" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
  {% block body %}
    <div id="wrap">
        <header class="masthead">
            <div id="nav" class="navbar navbar-custom navbar-inverse navbar-static-top" >
                <div class="container">
                    <div class="navbar-header">{% block header %}{% endblock %}</div>
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <nav class="collapse navbar-collapse bs-navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#" class="user"><span class="bar">Ласкаво просимо {{ app.user.username }}</span></a></li>
                            <li><a href="{{ path('ir_site_auth_logout') }}" class="logout">Вихід</a></li>
                        </ul>
                    </nav>
                  {% endif %}
                </div><!--/.container -->
            </div><!--/.navbar -->
        </header>
        {% block preContainer %}{% endblock %}
        <div class="bg-5">
            <div class="container">
                {% block content %}{% endblock %}
            </div><!--/container-->
        </div><!--/row-->
    </div>
    <div id="footer">
        <div class="container">
            <p class="text-muted">Copyright © 2014-{{ "now"|date("Y") }} IR</p>
        </div>
    </div>
    <ul class="nav pull-right scroll-top">
        <li><a href="#" title="Scroll to top"><i class="glyphicon glyphicon-chevron-up"></i></a></li>
    </ul>
    <div id="mask"></div>
  {% endblock %}
    <script src="{{ asset(uriRes ~ 'js/jquery.min.js') }}"></script>
    <script src="{{ asset(uriRes ~ 'js/bootstrap.min.js') }}"></script>
    <script src="{{ asset(uriRes ~ 'js/materialPreloader.min.js') }}"></script>
    <script src="{{ asset(uriRes ~ 'js/app.js') }}"></script>
  {% block javascripts %}{% endblock %}
</body>
</html>