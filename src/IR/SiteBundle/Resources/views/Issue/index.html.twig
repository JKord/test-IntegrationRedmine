{% extends 'IRSiteBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ projectName }} - Таски</h1>
    </div>
  {% for trackerName, issues in issuesByTracker %}
    <div class="panel panel-{{ trackers_color[trackerName] }}">
        <div class="panel-heading">
            <h3 class="panel-title">{{ trackerName }}</h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
              {% for issue in issues %}
                <li class="list-group-item">
                    <span class="badge">{{ issue.author.name }} / {{ issue.priority.name }} / {{ issue.created_on }}</span>
                    <h3>{{ issue.subject }}</h3>
                    <p>{{ issue.description }}</p>
                </li>
              {% endfor %}
            </ul>
        </div>
    </div>
  {% endfor %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
{% endblock %}